<%= link_to 'home', controller: 'home'  %>



<%= form_with scope: :trade,  local: true do |form| %>
  <p>
    <%= form.label :abbr %><br>
    <%= form.text_field :abbr %>
  </p>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :quantity %><br>
    <%= form.text_field :quantity %>
  </p>

  <p>
    <%= form.label :paid %><br>
    <%= form.text_field :paid %>
  </p>

  <p>
    <%= form.label :current_value %><br>
    <%= form.text_field :current_value %>
  </p>

  <p>
    <%= form.label :profit_loss %><br>
    <%= form.text_field :profit_loss %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>