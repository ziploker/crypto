<div id='battle_show_container'>

	<div id='battle_show'>
		<% if @battle.users.count >= 2 %>

			<h1> <%= @battle.users[0].email[/[^@]+/]%> vs <%=@battle.users[1].email[/[^@]+/] %> </h1>
		<%else %>
			<h1> YOU vs ...waiting for player </h1>
		<% end %>
		<h4> <%= @battle.id %></h4>
	</div>

	<div id='youvs'>

		total: $10,000

		<div id='go_to_market'>
			<h1>Market</h1>
			<p> room = <%= @battle.rooms.where(user_id: current_user.id)[0].wallets[0].abbr %> </p>

			<p> room = <%= @battle.rooms.where(user_id: current_user.id)[0].wallets[1].abbr %> </p>

		</div>

	</div>



	<% if @battle.users.count >= 2 %>
	
		<h1>match Started</h1>
	<% else %>




	<div id='vsyou'>
		<h1>gfjhfjgfj</h1>
		<div id='join_battle'>join</div>
	</div>


	

	<%= form_for @battle do |f| %>

		<%= f.check_box :status, value: true %> <-- status </h4><br>
		<%= f.text_field :finish, value: Time.now + 10.days  %>
		<%= f.number_field :players, value: 2 %>

		<% if current_user %>
			<H1>User ID = <%= @user.id %></H1>
			<H1>User email = <%= @user.email %></H1>
		<% end %>
	<% end %>





	<% end %>


</div>